<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cc.grameenphone">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.cc.grameenphone.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <!-- <activity
             android:name=".payment.NewAssociationActivity"
             android:label="@string/app_name"/>-->
        <activity
            android:name="com.cc.grameenphone.activity.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cc.grameenphone.activity.SelectContactsActivity"
            android:label="@string/title_activity_selct_contacts">

        </activity>
        <activity
            android:name="com.cc.grameenphone.activity.SignUpActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.ProfileUpdateActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.TransactionOverviewActivity"
            android:label="@string/title_activity_transaction_overview"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.BillPaymentActivity"
            android:label="@string/title_activity_transaction_overview"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.TransactionOverviewDeatilsActivity"
            android:label="@string/title_activity_transaction_overview_deatils"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.AddFavoritesActivity"
            android:label="@string/title_activity_add_favorites"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.ReferFriendsActivity"
            android:label="@string/title_activity_refer_friends"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.AddFavoriteContactsActivity"
            android:label="@string/title_activity_add_favorite_contacts"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"></activity>
        <activity
            android:name=".sign_up.SignUpActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.RegularPayDetailsActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.CancelAssociationActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.PaymentActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.NewAssociationActivity"
            android:label="@string/app_name" />


        <service
            android:name=".SmsRadarService"
            android:exported="false"
            android:label="@string/app_name" />




        <!-- Updating this will cause a database upgrade -->
        <meta-data android:name="Rush_db_version" android:value="1" />

        <!-- Database name -->
        <meta-data android:name="Rush_db_name" android:value="gp.db" />

        <!-- Setting this to true will cause a migration to happen every launch,
        this is very handy during development although could cause data loss -->
        <meta-data android:name="Rush_debug" android:value="false" />

        <!-- Setting this to true mean that tables will only be created of classes that
        extend RushObject and are annotated with @RushTableAnnotation -->
        <meta-data android:name="Rush_requires_table_annotation" android:value="false" />

        <!-- Turning on logging can be done by settings this value to true -->
        <meta-data android:name="Rush_log" android:value="false" />
    </application>

</manifest>
