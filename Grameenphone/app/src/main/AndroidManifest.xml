<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cc.grameenphone">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.cc.grameenphone.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <!-- <activity
             android:name=".payment.NewAssociationActivity"
             android:label="@string/app_name"/>-->
        <activity
            android:name="com.cc.grameenphone.activity.LoginActivity"

            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cc.grameenphone.activity.SplashscreenActivity"
            android:label="@string/title_activity_home"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.SelectContactsActivity"
            android:label="@string/title_activity_selct_contacts">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>
        <activity
            android:name="com.cc.grameenphone.activity.SignUpActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.GrameenhomeActivity"
            android:label="@string/title_activity_grameenhome"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.TransactionOverviewActivity"
            android:label="@string/title_activity_transaction_overview"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.BillPaymentActivity"
            android:label="@string/title_activity_transaction_overview"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.TransactionOverviewDeatilsActivity"
            android:label="@string/title_activity_transaction_overview_deatils"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.AddFavoritesActivity"
            android:label="@string/title_activity_add_favorites"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.ReferFriendsActivity"
            android:label="@string/title_activity_refer_friends"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.AddFavoriteContactsActivity"
            android:label="@string/title_activity_add_favorite_contacts"></activity>
        <activity
            android:name="com.cc.grameenphone.activity.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"></activity>
        <activity
            android:name=".sign_up.SignUpActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.RegularPayDetails"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.CancelAssociationActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.PaymentActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cc.grameenphone.activity.NewAssociationActivity"
            android:label="@string/app_name" />
    </application>

</manifest>
