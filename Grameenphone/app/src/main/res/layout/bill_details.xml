<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/desco_toolbar"
        layout="@layout/other_payment_toolbar"/>

    <LinearLayout
        android:id="@+id/desco_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/container_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/DESCO_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCO"
                android:textSize="17sp"
                android:gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/container_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/accountNmb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A/C NO"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/Anumb_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123432"
                android:textSize="17sp"
                android:gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/container_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/billNumb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill No"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/Bnumb_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2343"
                android:textSize="17sp"
                android:gravity="right"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/container_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/ruppes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9"
                android:gravity="right"
                android:layout_toLeftOf="@+id/amtNumb_text"
                android:paddingRight="2dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/amtNumb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs_amount"
                android:textSize="17sp"
                android:layout_alignParentRight="true"


                /></RelativeLayout>
            <RelativeLayout
                android:id="@+id/container_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/subcharge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subcharge"
                    android:textSize="17sp"
                    />
                <TextView
                    android:id="@+id/ruppes02_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9"
                    android:layout_toLeftOf="@+id/subAmt_text"
                    android:paddingRight="2dp"
                    android:layout_marginTop="2dp"
                    />
                <TextView
                    android:id="@+id/subAmt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="43"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    /></RelativeLayout>
                <LinearLayout
                    android:id="@+id/container_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/dueDate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/date_text"
                        android:textSize="17sp"
                        android:gravity="right"
                        /></LinearLayout>
        <TextView
            android:id="@+id/pinConform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pin_conform"
            android:layout_marginTop="40dp"
            android:textSize="17sp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/PinConform_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/pinNumbEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:layout_marginTop="10dp"
                android:hint="Enter PIN"
                android:textSize="17sp"
                /></android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/conform_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:background="@drawable/login_button"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_gravity="center"
            />
                </LinearLayout>

            </LinearLayout>
