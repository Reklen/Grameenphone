<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:background="@color/primary"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <com.cc.grameenphone.views.RippleView
                android:id="@+id/backRipple"
                rv_centered="true"
                rv_zoom="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                app:rv_rippleDuration="100">

                <ImageButton
                    android:id="@+id/image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/icon_back" />

            </com.cc.grameenphone.views.RippleView>

            <TextView
                android:id="@+id/toolbar_text"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/backRipple"
                android:gravity="center_vertical"
                android:text="Desco or other companies name"
                android:textColor="@color/white" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/desco_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/container_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/DESCO_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="DESCO"
                android:textColor="#929292"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountNmb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A/C NO"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Anumb_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="123432"
                android:textColor="#929292"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/billNumb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill No"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Bnumb_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2343"
                android:textColor="#929292"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/container_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ruppes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/amtNumb_text"
                android:gravity="right"
                android:paddingRight="2dp"
                android:text="\u20B9"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/amtNumb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/rs_amount"
                android:textColor="#929292"
                android:textSize="15sp"


                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/subcharge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subcharge"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ruppes02_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/subAmt_text"
                android:paddingRight="2dp"
                android:text="\u20B9"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/subAmt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="43"
                android:textColor="#929292"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dueDate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date"
                android:textColor="#929292"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/date_text"
                android:textColor="#929292"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/pinConform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/pin_conform"
            android:textColor="#929292"
            android:textSize="17sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/PinConform_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/pinNumbEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enter PIN"
                android:inputType="numberPassword"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button"
            android:padding="10dp"
            android:text="CONFIRM"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
