<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/billPaymentLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/container_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/company_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/DESCO_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="DESCO"
            android:textColor="#D9000000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accountNmb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A/C NO"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Anumb_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="123432"
            android:textColor="#D9000000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/billNumb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill No"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Bnumb_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2343"
            android:textColor="#D9000000"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ruppes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/amtNumb_text"
            android:gravity="right"
            android:paddingRight="2dp"
            android:text="\u20B9"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amtNumb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/rs_amount"
            android:textColor="#D9000000"
            android:textSize="15sp"


            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/subcharge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subcharge"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ruppes02_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/subAmt_text"
            android:paddingRight="2dp"
            android:text="\u20B9"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/subAmt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="43"
            android:textColor="#D9000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dueDate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:textColor="#D9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/date_text"
            android:textColor="#D9000000"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pinConform_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/pin_conform"
        android:textColor="#D9000000"
        android:textSize="17sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/PinConform_container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        >

        <EditText
            android:id="@+id/pinNumbEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Enter PIN"
            android:inputType="numberPassword"
            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/conform_btn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button"
        android:padding="10dp"
        android:text="CONFIRM"
        android:textColor="@color/white" />
</LinearLayout>