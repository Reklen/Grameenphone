<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/relLayout">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Acc. No:"
        android:id="@+id/accountNumber_String"
        android:layout_above="@+id/paybutton"
        android:layout_alignLeft="@+id/billNumber_String"
        android:layout_alignStart="@+id/billNumber_String"
        android:textColor="#000000"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:textColor="#FFFFFF"
        android:id="@+id/paybutton"
        android:background="@drawable/mybutton"
        android:layout_alignBottom="@+id/dueDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill No: "
        android:id="@+id/billNumber_String"
        android:layout_below="@+id/accountNumber_String"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company: "
        android:id="@+id/company_String"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignLeft="@+id/billNumber_String"
        android:layout_alignStart="@+id/billNumber_String" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due date: "
        android:id="@+id/dueDate_String"
        android:layout_below="@+id/company_String"
        android:layout_alignLeft="@+id/company_String"
        android:layout_alignStart="@+id/company_String" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="INR : "
        android:id="@+id/inr"
        android:layout_alignTop="@+id/accountNumber"
        android:layout_toLeftOf="@+id/value"
        android:layout_toStartOf="@+id/paybutton" />

    <TextView
        android:paddingLeft="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="123432"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/accountNumber"
        android:layout_toRightOf="@+id/accountNumber_String"
        android:layout_toEndOf="@+id/accountNumber_String"
        android:layout_alignBaseline="@id/accountNumber_String"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2834"
        android:id="@+id/billNumber"
        android:layout_alignBottom="@+id/billNumber_String"
        android:layout_toRightOf="@+id/billNumber_String"
        android:layout_toEndOf="@+id/billNumber_String" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DESCO"
        android:id="@+id/company"
        android:layout_alignBottom="@+id/company_String"
        android:layout_toRightOf="@+id/accountNumber_String"
        android:layout_toEndOf="@+id/accountNumber_String" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="24, July 2015"
        android:id="@+id/dueDate"
        android:layout_below="@+id/company"
        android:layout_toRightOf="@+id/company_String"
        android:layout_toEndOf="@+id/company_String" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1,200"
        android:id="@+id/value"
        android:layout_alignTop="@+id/inr"
        android:layout_alignRight="@+id/paybutton"
        android:layout_alignEnd="@+id/paybutton" />


</RelativeLayout>