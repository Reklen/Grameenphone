<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cc.grameenphone.activity.TransactionOverviewActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/transaction_toolbar" />

    <ListView
        android:id="@+id/transactionList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:listSelector="@drawable/rowbackgroundselector"
        tools:listitem="@layout/adapter_item_transaction" />

</RelativeLayout>
