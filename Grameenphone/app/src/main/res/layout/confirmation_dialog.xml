<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enterPinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:text="Enter your PIN to confirm"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black_eighty_seven" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/enterPin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPinText"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/enterPin_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter PIN"
            android:inputType="text"
            android:textColor="@color/black_semi_transparent"
            android:textColorHint="@color/hint_color" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/confirmDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/enterPin_container"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:text="CONFIRM"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>