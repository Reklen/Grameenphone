<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/transactionToolbar"
        layout="@layout/sign_up_toolboar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="10dp"
        android:layout_below="@+id/transactionToolbar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/sign_up_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/grameen_icon01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:src="@drawable/homeicon" />

            <TextView
                android:id="@+id/grameen_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/grameenPhone"
                android:textColor="#80323232"
                android:textSize="17sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/top_container1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/areaCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="34dp"
                    android:text="+88017"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:background="#aaaaaa">

                </View>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phone_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/areaCode">

                    <EditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="10"
                        android:hint="Phone number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="#929292"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/areaCode"
                    android:layout_alignParentBottom="true"
                    android:background="#aaaaaa">

                </View>


            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/setPin_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/setPinEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Set pin"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="#929292"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#aaaaaa" />

            <TextView
                android:id="@+id/consecutivetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/Consecutive"
                android:textSize="13sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/confromPin_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/conformPinEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Confirm pin"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="#929292"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#aaaaaa" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/referral_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >

                <EditText
                    android:id="@+id/referralPinEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Referal code"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColor="#929292"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#aaaaaa" />

            <RelativeLayout
                android:id="@+id/checkbox_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wallet_pin_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/sign_check_box01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sign_accept_text01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/sign_check_box01"
                    android:text="@string/accept"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sign_terms_text01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/sign_accept_text01"
                    android:paddingLeft="5dp"
                    android:text="@string/terms_condition"
                    android:textColor="@color/blue_900"
                    android:textSize="13sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/signUp"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>