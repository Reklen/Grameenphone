<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter your PIN to confirm"
        android:id="@+id/enterPinText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:textColor="#030303" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/enterPin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/enterPinText"
        >
        <EditText
            android:id="@+id/enterPin_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter PIN"
            android:inputType="text"
            /></android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CONFIRM"
        android:id="@+id/confrimbtn"
        android:layout_below="@+id/enterPin_container"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:background="@null"
        android:textStyle="bold"
        android:textColor="@color/primary"/>
</RelativeLayout>